<h1>My Tasks</h1>

<% @tasks.each do |task| %>
if task.completed
show checked box
else
show empty box
  <p><%= link_to task.title, task_path(task) %></p>
  <p><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>

<br>

<p><%= link_to "Add a new task", tasks_new_path  %></p>
